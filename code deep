package eu.kanade.tachiyomi.extension.pt.mangalivre

import eu.kanade.tachiyomi.multisrc.madara.Madara

class MangaLivre : Madara(
    "Manga Livre", 
    "https://mangalivre.net",  // Verifique a URL atual do site!
    "pt-BR"
) {
    override val client = network.client.newBuilder()
        .followRedirects(true)
        .build()

    override val supportsLatest = true
    override val isNsfw = true  // Altere para `false` se não for adulto
}
package eu.kanade.tachiyomi.extension.pt.mangalivre

import eu.kanade.tachiyomi.multisrc.madara.MadaraFactory

class MangaLivreFactory : MadaraFactory(
    "Manga Livre",
    "https://mangalivre.net",
    "pt-BR",
    MangaLivre::class
)
version = "1.0.0"

apply(plugin = "tachiyomi.extension")

dependencies {
    implementation(project(":lib-multisrc-madara"))  // Caminho mais comum
    // Se não funcionar, tente:
    // implementation("tachiyomi:multisrc-madara:1.0") 
}
version = "1.0.0"

apply(plugin = "tachiyomi.extension")

dependencies {
    implementation(project(":lib-multisrc-madara"))  // Caminho mais comum
    // Se não funcionar, tente:
    // implementation("tachiyomi:multisrc-madara:1.0") 
}
import eu.kanade.tachiyomi.network.interceptor.CloudflareInterceptor

override val client = network.client.newBuilder()
    .addInterceptor(CloudflareInterceptor())
    .build()
